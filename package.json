{
	"name": "cf-neocities",
	"scripts": {
		"dev": "wrangler dev",
		"deploy": "wrangler deploy --minify",
		"size": "wrangler deploy --outdir bundled/ --dry-run",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"build:templates": " micro-template-serialize templates/*.html templates/**/*.html --output src/templates.js --root templates",
		"build:digits": "node scripts/embed-digits.js",
		"build": "npm run build:digits && npm run build:templates",
		"test": "vitest run"
	},
	"dependencies": {
		"hono": "^4.7.11"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.8.38",
		"micro-template": "^3.0.0",
		"vitest": "~3.1.0",
		"wrangler": "^4.20.0"
	}
}
